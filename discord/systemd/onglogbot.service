[Unit]
Description=onglog search discord bot
After=network-online.target

[Service]
Type=simple

User=ongbots
Group=ongmod
Environment="BASEDIR=/home/ongbots/ong-scripts/discord"

ExecStart=/bin/bash -c "'${BASEDIR}/venv/bin/python3' '${BASEDIR}/onglogbot.py' --env xxxx"


Restart=on-failure
RestartSec=300s

[Install]
WantedBy=multi-user.target
