[Unit]
Description=onglog search discord bot
After=network-online.target

[Service]
User=ongbots
Group=ongmod

Type=simple
Environment="BASEDIR=/home/ongbots/ong-scripts/discord"
ExecStart=/bin/bash -c "'${BASEDIR}/venv/bin/python3' '${BASEDIR}/ongcodebot.py' --env xxxx"

Restart=on-failure
RestartSec=300s

[Install]
WantedBy=multi-user.target
