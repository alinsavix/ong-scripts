[Unit]
Description=onglog search discord bot database updater
After=network-online.target

[Service]
Type=oneshot

User=ongbots
Group=ongmod
Environment="BASEDIR=/home/ongbots/ong-scripts/discord"

RemainAfterExit=no

ExecStart=/bin/bash -c "'${BASEDIR}/venv/bin/python3' '${BASEDIR}/onglogbot.py' --env prod --update-only"

Restart=on-failure
RestartSec=900s

[Install]
WantedBy=multi-user.target
