[Unit]
Description=ong looper video streamer
After=network-online.target
After=tailscaled.service

PartOf=ong-online.target

[Service]
Type=simple
EnvironmentFile=-/etc/default/ong
EnvironmentFile=/etc/default/looperstream

ExecStart=/root/ong-scripts/looperstream/looperstream.py --host ${OBS_HOST} --port ${OBS_PORT} --timecode-scene ${OBS_TIMECODE_SCENE} --timecode-source ${OBS_TIMECODE_SOURCE} --camera-device ${CAMERA_DEVICE} --camera-config-script ${CAMERA_CONFIG_SCRIPT} --mirror-device ${MIRROR_DEVICE} --stream-res ${STREAM_RES} --stream-fps ${STREAM_FPS} --stream-bitrate ${STREAM_BITRATE} --credentials-file ${DISCORD_CREDENTIALS}

KillMode=mixed
TimeoutStopSec=60s

Restart=always
RestartSec=150s

[Install]
WantedBy=ong-online.target
